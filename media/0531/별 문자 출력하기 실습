                    if(j<i){

                    }
                }
            }
            document.write("<br>");
            for(let i=0; i<num; i++){
                let star4="";
                for(let j=0; j<num; j++){
                    if(j<num-i-1){
                        star4+= "&nbsp;";
                    }
                    else {
                        star4 +="*";
                    }
                }
            }
            document.write(star4,"<br>");
        </script>
